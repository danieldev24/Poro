<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_edit_label_row"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?attr/android:windowBackground"
    tools:targetApi="lollipop">

    <FrameLayout
        android:id="@+id/scroll_icon_container"
        android:layout_width="@dimen/menu_item_icon_size"
        android:layout_height="@dimen/menu_item_size"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:focusable="false"
        android:clickable="false">
        <ImageView
            android:id="@+id/scroll_icon"
            android:src="@drawable/ic_dots_scroll"
            android:contentDescription="@string/labels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end">
        </ImageView>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/label_icon_container"
        android:layout_width="@dimen/menu_item_size"
        android:layout_height="@dimen/menu_item_size"
        android:layout_toEndOf="@id/scroll_icon_container"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:clickable="false">
        <ImageView
            android:id="@+id/label_icon"
            android:src="@drawable/ic_label"
            android:contentDescription="@string/labels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
        </ImageView>
        <View
            android:layout_width="@dimen/menu_item_ripple_size"
            android:layout_height="@dimen/menu_item_ripple_size"
            android:layout_gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:duplicateParentState="true">
        </View>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/image_left_container"
        android:layout_width="@dimen/menu_item_size"
        android:layout_height="@dimen/menu_item_size"
        android:layout_toEndOf="@id/scroll_icon_container"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:clickable="false"
        android:visibility="invisible">
        <ImageView
            android:id="@+id/image_left"
            android:src="@drawable/ic_palette"
            android:contentDescription="@string/labels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
        </ImageView>
        <View
            android:layout_width="@dimen/menu_item_ripple_size"
            android:layout_height="@dimen/menu_item_ripple_size"
            android:layout_gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:duplicateParentState="true">
        </View>
    </FrameLayout>

    <EditText
        android:id="@+id/text"
        android:hint="@string/label_name"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/image_left_container"

        android:layout_toStartOf="@id/image_right_container"

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:paddingBottom="12dp"
        android:paddingTop="12dp"

        style="@style/AddEditLabelRowEdit"/>

    <FrameLayout
        android:id="@+id/image_delete_container"
        android:layout_width="@dimen/menu_item_size"
        android:layout_height="@dimen/menu_item_size"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/image_right_container"
        android:focusable="false"
        android:clickable="false"
        android:visibility="invisible">
        <ImageView
            android:id="@+id/image_delete"
            android:contentDescription="@string/dialog_delete"
            android:src="@drawable/ic_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
        <View
            android:layout_width="@dimen/menu_item_ripple_size"
            android:layout_height="@dimen/menu_item_ripple_size"
            android:layout_gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:duplicateParentState="true">
        </View>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/image_right_container"
        android:layout_width="@dimen/menu_item_size"
        android:layout_height="@dimen/menu_item_size"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="4dp"
        android:focusable="false"
        android:clickable="false">
        <ImageView
            android:id="@+id/image_right"
            android:contentDescription="@string/edit"
            android:src="@drawable/ic_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
        <View
            android:layout_width="@dimen/menu_item_ripple_size"
            android:layout_height="@dimen/menu_item_ripple_size"
            android:layout_gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:duplicateParentState="true">
        </View>
    </FrameLayout>
</RelativeLayout>